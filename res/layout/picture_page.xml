<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/bg_color"
    android:scrollbars="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        android:orientation="vertical" >

        <ProgressBar
            android:id="@+id/loading_bar_picture"
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:visibility="visible" />

        <RelativeLayout
            android:id="@+id/picture_date_layout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/readcount_picture"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:textColor="?attr/text_color" />

            <ImageView
                android:id="@+id/eye_picture"
                android:layout_width="25dp"
                android:layout_height="fill_parent"
                android:layout_alignBottom="@id/readcount_picture"
                android:layout_alignParentTop="true"
                android:layout_toLeftOf="@id/readcount_picture"
                android:scaleType="fitCenter"
                android:src="?attr/eye"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/date_picture"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:textColor="?attr/text_color"
                android:textSize="15sp" />
        </RelativeLayout>

        <View
            android:id="@+id/line_picture"
            android:layout_width="fill_parent"
            android:layout_height="1px"
            android:layout_below="@id/picture_date_layout"
            android:layout_marginTop="5dp"
            android:background="?attr/line_color"
            android:visibility="invisible" />

        <ImageView
            android:id="@+id/picture_picture"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/line_picture"
            android:layout_marginTop="10dp"
            android:scaleType="centerInside" />

        <TextView
            android:id="@+id/text_picture"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/picture_picture"
            android:layout_marginTop="20dp"
            android:lineSpacingMultiplier="1.35"
            android:textIsSelectable="true"
            android:textColor="?attr/text_color"
            android:textSize="@dimen/text_size" />

        <LinearLayout
            android:id="@+id/like_bar_picture"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/text_picture"
            android:background="?attr/bg_color"
            android:orientation="vertical"
            android:visibility="invisible" >

            <include layout="@layout/like_bar" />
        </LinearLayout>

        <View
            android:id="@+id/line_bottom_picture"
            android:layout_width="fill_parent"
            android:layout_height="1px"
            android:layout_below="@id/like_bar_picture"
            android:layout_marginTop="5dp"
            android:background="?attr/line_color"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/author_intro_picture"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/line_bottom_picture"
            android:layout_marginTop="10dp"
            android:lineSpacingMultiplier="1.2"
            android:textColor="?attr/text_color"
            android:textSize="@dimen/author_size" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/author_intro_picture"
            android:lineSpacingMultiplier="1.2"
            android:text="\n" />
    </RelativeLayout>

</ScrollView>